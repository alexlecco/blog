<%= form_for([@article, @article.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter, 'Usuario' %> <br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body, 'Contenido' %> <br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit 'Crear comentario' %>
  </p>
<% end %>
