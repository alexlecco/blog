<div>
  <h1> Listado de artículos </h1>
</div>

<div>
  <table>
    <tr>
      <th> Título </th>
      <th> Texto</th>
      <th colspan="2"></th>
    </tr>

    <% @articles.each do |article| %>
      <tr>
        <td> <%= article.title %> </td>
        <td> <%= article.text %> </td>
        <td> <%= link_to 'Mostrar', article_path(article) %> </td>
        <td> <%= link_to 'Editar', edit_article_path(article) %> </td>
      </tr>
    <% end %>
  </table>

  <br />
  <%= link_to 'Atrás', root_path %>
</div>
